{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start API Server (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app", // module:function syntax
        "--reload", // optional: reload on file changes
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/api-server",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
